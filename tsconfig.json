{
  "extends": "capsule-pack/tsconfig.base.json",
  "compilerOptions": {
    "target": "es2016",
    /* 支持jsx */
    "jsx": "react",
    "module": "ES2015",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "noUnusedParameters": false
  },
  "include": ["./src"],
  /* 不检查的目录 */
  "exclude": ["node_modules", "./dist"]
}
